<li class="divider"></li>
<div class="row">
  <div class="large-18 columns">
    <div class="panel">
      <% if current_user %>
      <h3>enter peep</h3>
      <form action="/peep" method="post">
      <textarea name="peep_body"></textarea>
      <input type="submit" value="peep!" class="button">
      <%  else %>
      <p>you must be logged in to peep</p>
      <% end %>
    </div>
  </div>
</div>
<% @peeps.each do |peep| %>
<div class="row">
  <div class="large-2 columns small-3"><img src="http://placehold.it/80x80&text=[img]"/></div>
  <div class="large-10 columns">
    <p><strong><%= peep.user.user_name %></strong> <%= peep.body %></p>
    <ul class="inline-list">
      <li><strong>added:</strong><%= peep.time.strftime("%H:%M %d/%m/%Y")%></li>
    </ul>
    <hr/>
  </div>
</div>

<% end %>


<footer class="row">
  <div class="large-12 columns">
    <hr/>
    <div class="row">
      <div class="large-5 columns">
        <p>Created by Lewis while at Makers Academy.</p>
      </div>
      <div class="large-7 columns">
        <ul class="inline-list right">
          <li><a href="https://github.com/ljones140">Lewis Jones</a></li>
          <li><a href="http://www.makersacademy.com/">Makers Academy</a></li>
        </ul>
      </div>
    </div>
  </div>
</footer>

